@model IEnumerable<Vidly.ViewModels.IndexCustomerViewModels>

@{
    this.ViewBag.Title = "All Customers";
}

<h1>Customers</h1>
@if (this.Model.Count() == 0)
{
    <p>There are no registered customers yet!</p>
}
else
{
    <table class="table table-bordered">
        <tr>
            <th>Customers</th>
            <th>Discount Rate</th>
        </tr>
        @foreach (var item in this.Model)
        {
            <tr>
                <td>@Html.ActionLink(item.Name, "Details", new { id = item.Id })</td>
                @if (item.MembershipType.DiscountRate != 0)
                {
                    <td>@item.MembershipType.DiscountRate%</td>
                }
                else
                {
                    <td>none</td>
                }
            </tr>
        }
    </table>
}